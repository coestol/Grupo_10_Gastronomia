<!DOCTYPE html>
<html lang="es">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bienvenido a Gastronomia Bella Vista</title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
            rel="stylesheet" />
        <link rel="stylesheet" href="/css/home.css">
        </head>
<body>
    <%- include('partials/header') %>
    
    <%- include('partials/banner') %>

    <main>
        <section class="productos-destacados">
            <h2>Productos Destacados</h2>
        
            <div class="products">
                <% featured.forEach( producto => { %>
                    <a href="/DetalleProducto/<%= producto.id_product %>">
                    
                    <div class="card">
                        <div class="card-details">
                                <img src="/images/productos/<%= producto.image %>" alt="Cocina" class="product_img">
                                <p class="text-title"><%= producto.name %></p>
                                <p class="text-body">$<%= producto.price %></p>
                        </div>
                        
                    <button class="card-button">Detalles del producto</button>
                    
                    </div>
                </a>
                <%})%>
            </div>
           
        </section>





        <section class="productos-destacados">
            <h2>Productos en oferta</h2>
            <div class="products">
                <div class="products">
                    <% sales.forEach( producto => { %>
                        <a href="/DetalleProducto/<%= producto.id_product %>">
                        
                        <div class="card">
                            <div class="card-details">
                                    <img src="/images/productos/<%= producto.image %>" alt="Cocina" class="product_img">
                                    <p class="text-title"><%= producto.name %></p>
                                    <p class="text-body">$<%= producto.price %></p>
                            </div>
                            <button class="card-button">Detalles del producto</button>
                        </div>
                        </a>
                    <%})%>
                </div>   
            </div>
        </section>
    </main>
    <%- include('partials/footer') %>
</body>
</html> 