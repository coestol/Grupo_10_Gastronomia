<!DOCTYPE html>
<html lang="es">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>GBV - Listado productos</title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
            rel="stylesheet" />
        <link rel="stylesheet" href="/css/listado.css">
        </head>
<body>
    <%- include('../partials/header') %>
    
    <main>

            <h2>Listado de productos</h2>
            <div class="products">
                <% productos.forEach( producto => { %>
                    <article>
                        <a href="/DetalleProducto/<%= producto.id %>">
                        <img src="/images/productos/<%= producto.imagen %>" alt="Cocina" class="product_img">
                        <div class="main-article">
                            <i class="fas fa-truck"></i>
                            <p class="price"><%= producto.precio %></p>
                            <p class="discount"><%= producto.descuento %></p>
                            <h4 class="description"><%= producto.nombre %></h4>
                        </div>
                        </a>
                    </article> 
                <%})%>
            </div>

    </main>
    <%- include('../partials/footer') %>
</body>
</html> 